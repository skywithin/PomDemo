
@if (this.Item != null)
{
	<li @key="this.Item.Id">
		<div class="row mb-2">
			<div class="col-1" style="width:30px">
				<input type="checkbox"
					   style="vertical-align:middle"
					   class="form-check-input"
					   @bind-value="this.Item.IsCompleted"
					   checked="@this.Item.IsCompleted" />
			</div>
			<div class="col">
				@if (this.Item.IsCompleted)
				{
					<input type="text"
						   style="vertical-align:middle"
						   class="form-control border-0 text-decoration-line-through"
						   @bind-value="this.Item.Name"
						   disabled />
				}
				else
				{
					<input type="text"
						   style="vertical-align:middle"
						   class="form-control border-0"
						   @bind-value="this.Item.Name" />
				}

			</div>
			<div class="col">
				@if (Item.IsCompleted)
				{
					<text>Completed at: @Item.CompletedAt?.ToLongDateString()</text>
				}
			</div>
		</div>
	</li>
}


@code {
	[Parameter]
	public TodoItem? Item { get; set; }
}
