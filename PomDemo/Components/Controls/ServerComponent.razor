@if (server != null)
{

	<div data-name="@server.Name"
	data-status='@(server.IsOnline ? "online" : "offline")'
	style='@($"color:{(server.IsOnline ? "green" : "red")}")'>
		@server.Name (@server.City) is @(server.IsOnline ? "online" : "offline") at @DateTime.Now
		&nbsp;
		<button type="button" class="btn btn-primary" @onclick="ChangeStatus">Turn On/Off</button>
	</div>
}

@code {
	private Server? server { get; set; } = new Server { Name = "Server 1", City = "Sydney", IsOnline = false };

	private void ChangeStatus()
	{
		if (server != null)
		{
			this.server.IsOnline = !this.server.IsOnline;
		}
	}
}
